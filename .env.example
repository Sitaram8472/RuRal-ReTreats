# For MongoDB Localhost:
MONGO_URI=mongodb://localhost:27017/rural_retreats_db

# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/rural_retreats_db

# Email Configuration (for EmailJS)
EMAIL_SERVICE_ID=your_email_service_id
EMAIL_TEMPLATE_ID=your_email_template_id
EMAIL_USER_ID=your_email_user_id

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret (authentication)
JWT_SECRET=your_jwt_secret_key

# Google Maps API (location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Razorpay Configuration (Test Mode / Live)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5502
